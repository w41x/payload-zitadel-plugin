{
  "name": "payload-zitadel-plugin",
  "version": "0.5.13",
  "description": "plugin for Payload CMS, which enables authentication via Zitadel IdP",
  "type": "module",
  "license": "MIT",
  "author": {
    "name": "WALX Tech e.K.",
    "email": "x@walx.tech",
    "url": "https://walx.tech"
  },
  "contributors": [
    {
      "name": "ле41%",
      "email": "_@w41x.io",
      "url": "https://w41x.io"
    }
  ],
  "homepage": "https://github.com/w41x/payload-zitadel-plugin#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/w41x/payload-zitadel-plugin.git"
  },
  "keywords": [
    "payload",
    "cms",
    "plugin",
    "zitadel"
  ],
  "bugs": {
    "url": "https://github.com/w41x/payload-zitadel-plugin/issues"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm build:swc && pnpm build:types",
    "build:swc": "swc src -d dist --config-file .swcrc --strip-leading-paths",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "reset": "rimraf dist node_modules pnpm-lock.yaml tsconfig.tsbuildinfo dev/.next dev/node_modules dev/pnpm-lock.yaml",
    "prepublishOnly": "pnpm clean && pnpm build"
  },
  "dependencies": {
    "@payloadcms/next": "^3.68.5",
    "@payloadcms/translations": "^3.68.5",
    "@payloadcms/ui": "^3.68.5",
    "jose": "^6.1.3",
    "next": "^16.1.0",
    "payload": "^3.68.5",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.7",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": "^25.2.1"
  },
  "packageManager": "pnpm@10.26.0",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./components/client": {
      "import": "./dist/components/client/index.js",
      "require": "./dist/components/client/index.js",
      "types": "./dist/components/client/index.d.ts"
    },
    "./components/server": {
      "import": "./dist/components/server/index.js",
      "require": "./dist/components/server/index.js",
      "types": "./dist/components/server/index.d.ts"
    },
    "./types": {
      "import": "./dist/types.js",
      "require": "./dist/types.js",
      "types": "./dist/types.d.ts"
    }
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "import": "./dist/index.js",
        "require": "./dist/index.js",
        "types": "./dist/index.d.ts"
      },
      "./components/client": {
        "import": "./dist/components/client/index.js",
        "require": "./dist/components/client/index.js",
        "types": "./dist/components/client/index.d.ts"
      },
      "./components/server": {
        "import": "./dist/components/server/index.js",
        "require": "./dist/components/server/index.js",
        "types": "./dist/components/server/index.d.ts"
      },
      "./types": {
        "import": "./dist/types.js",
        "require": "./dist/types.js",
        "types": "./dist/types.d.ts"
      }
    },
    "main": "./dist/index.js",
    "registry": "https://registry.npmjs.org",
    "types": "./dist/index.d.ts"
  }
}
